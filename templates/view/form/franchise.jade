.main-box.ds-form(id="{$_name}" style="width:100%;")
	.row
		.col-lg-12.col-xs-12.col-sm-12.col-md-12.form-group.atk-form-row.atk-form-field
			label First Name
			{$first_name}
	.row
		.col-xs-4.col-sm-4.col-md-4.form-group.atk-form-row.atk-form-field
			label Email id
			{$email}
		.col-xs-4.col-sm-4.col-md-4.form-group.atk-form-row.atk-form-field
			label Mobile No
			{$mobile_number}
		.col-xs-4.col-sm-4.col-md-4.form-group.atk-form-row.atk-form-field
			label PAN Number
			{$pan_no}
	.row
		.col-xs-12.col-sm-12.col-md-6
			.row
				div.col-xs-12.col-sm-12.col-md-6.form-group.atk-form-row.atk-form-field
					label Country
					{$country_id}
				div.col-xs-12.col-sm-12.col-md-6.form-group.atk-form-row.atk-form-field
					label State
					{$state_id}
			.row
				div.col-xs-12.col-sm-12.col-md-6.form-group.atk-form-row.atk-form-field
					label City
					{$city}
				div.col-xs-12.col-sm-12.col-md-6.form-group.atk-form-row.atk-form-field
					label Pincode
					{$pin_code}
		.col-xs-12.col-sm-12.col-md-6.form-group.atk-form-row.atk-form-field
			label Address
			{$address}
	hr
	.row
		.col-xs-12.col-sm-12.col-md-4.col-lg-4.form-group.atk-form-row.atk-form-field
			label User name
			{$username}
		.col-xs-12.col-sm-12.col-md-4.col-lg-4.form-group.atk-form-row.atk-form-field
			label Password
			{$password}
		.col-xs-12.col-sm-12.col-md-4.col-lg-4.form-group.atk-form-row.atk-form-field
			label Re-Password
			{$retype_password}
	.row		
	{$FormButtons}
