.xepan-mlm-megamenu(id="{$_name}")
	nav.navbar.bg-primary
		.container-fluid
			// Brand and toggle get grouped for better mobile display
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='#')
					img.normal-logo.hidden-md.hidden-lg(src='/www/img/logo.png', alt='' style="width:50% ")
					//- img.normal-logo.logo-black(src='img/logo3-black.png', alt='')
					//- img.small-logo.hidden-xs.hidden-sm.hidden(src='img/logo.png', alt='')
			// Collect the nav links, forms, and other content for toggling
			#bs-example-navbar-collapse-1.collapse.navbar-collapse
				{category_list}
				ul.nav.navbar-nav
					{rows}{row}
					li.dropdown.mega-dropdown(data-id="{$id}")
						a.dropdown-toggle(href='{$sub_url}', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false') {name}Products{/} 
						{$child_category}
					{/row}{/rows}{/category_list}

				{child_cat_lister}
				{$Content}		
				ul.dropdown-menu.mega-dropdown-menu
					{rows}{row}
					li.dropdown1.col-sm-2(data-id="{$id}")
						a.mlm-mega-sabmenu(href='{$sub_url}') 
							{name}Products{/} 
					//- li.col-sm-3
					//- 	| Features Products
					//- li.col-sm-3
					//- 	| Plus Products
					//- li.col-sm-3
					//- 	| Much more Products
					{/}{/}
				{/child_cat_lister}
style.
	.xepan-mlm-megamenu .mega-dropdown {
	position: static !important;
	}
	.xepan-mlm-megamenu .mega-dropdown-menu {
	padding: 20px 0px;
	width: 100%;
	box-shadow: none;
	-webkit-box-shadow: none;
	}
	.xepan-mlm-megamenu .mega-dropdown-menu > li > ul {
	padding: 0;
	margin: 1px;
	}
	.xepan-mlm-megamenu .mega-dropdown-menu > li > ul > li {
	list-style: none;
	}
	.xepan-mlm-megamenu .mega-dropdown-menu > li > ul > li > a {
	display: block;
	color: #222;
	padding: 3px 5px;
	}
	.xepan-mlm-megamenu .mega-dropdown-menu > li ul > li > a:hover,
	.xepan-mlm-megamenu .mega-dropdown-menu > li ul > li > a:focus {
	text-decoration: none;
	}
	.xepan-mlm-megamenu .mega-dropdown-menu .dropdown-header {
	font-size: 18px;
	color: #ff3546;
	padding: 5px 60px 5px 5px;
	line-height: 30px;
	}
	.nav .open > a, .nav .open > a:focus, .nav  .open  > a:hover {
	background-color: #f47221;
	border-color: #f47221;
	}
	.xepan-mlm-megamenu .mlm-mega-sabmenu:hover {
	    color: rgb(244, 114, 33);
	}
	.xepan-mlm-megamenu .dropdown a.dropdown-toggle {
	    color: #fff;
	}

	.xepan-mlm-megamenu .mlm-mega-sabmenu {
	    border-bottom: 1px solid #e1e1e1;
	    display: block;
	    font-size: 12px;
	    padding: 8px 20px;
	    text-transform: uppercase;
	}

	.xepan-mlm-megamenu .mega-dropdown-menu {
	    border-bottom: 2px solid rgb(244, 114, 33);
	    box-shadow: none;
	    padding: 20px 0;
	    width: 100%;
	}

script.
	$(document).ready(function(){
		$(".dropdown").hover(
			function() {
				$('.dropdown-menu', this).not('.in .dropdown-menu').stop(true,true).slideDown("400");
				$(this).toggleClass('open');
			},
			function() {
				$('.dropdown-menu', this).not('.in .dropdown-menu').stop(true,true).slideUp("400");
				$(this).toggleClass('open');
			}
		);

		$('.dropdown').click(function(){
			$.univ().location($(this).find('a').attr('href'));
		});
	});