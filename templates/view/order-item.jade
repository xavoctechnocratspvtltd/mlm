.container.xepan-grid.main-box.clearfix.atk-table.atk-table-zebra.atk-table-bordered(id="{$_name}" class="{$class}")
	{Pannel}
	header.main-box-header.clearfix.atk-actions(class=" {$class} ")
		div.filter-block( style="100%")
			.pull-right {$grid_buttons} 
			//- .form-group.pull-right.xepan-filter-form
			//- 	span(class="form-control pull-left")|{$quick_search}
			//- 		i(class="fa fa-search1 search-icon1")
	{/Pannel}
        
	.row
		.main-box-body.clearfix.table-responsive
			table.table.table-bordered(style="width:100%")
				{header}
				thead
					{cols}{col}
					//- th #
					th Product Name
					th Product Code
					th Price
					th Quantity
					th Total Amount
					//- th
					{/}{/}
				{/}
				{$subheader}

				tbody
					{rows}{row}
					tr(class="{$odd_even}" data-id="{$id}")
						{cols}
						td
							| {$name}
						td
							| {$item_sku}
						td
							| {$price}
						td
							| {$quantity}
						td
							| {$total_amount}	
						//- td
						//- 	| {action}Action Here{/}
						//- td(style="width: 15%;")
						//- 	{$edit}
						//- 	{$delete}
						
						{/}
					{/}{/}
					{not_found}
					div.row
						.col-md-12.text-center.alert.alert-warning(role="alert")
							span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
					{/}

				{totals}
				tfoot
					tr(class="totals")
						{cols}{col}
						<td {$tdparam}>
						{$content}
						</td>
						{/}{/}
				{/}
			{$Paginator}